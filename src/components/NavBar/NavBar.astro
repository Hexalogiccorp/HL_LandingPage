<header class="navbar">
  <div class="container">
    <nav class="nav">
      <div class="nav-brand">
        <img id="logo" src="/logo.png" alt="">
      </div>

      <button id="mobile-menu-button" class="mobile-menu-btn">
        <svg
          class="menu-icon"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <div class="nav-links desktop-nav">
        <a href="#inicio" class="nav-link">Inicio</a>
        <a href="#servicios" class="nav-link">Servicios</a>
        <a href="#proceso" class="nav-link">Proceso</a>
        <a href="#proyectos" class="nav-link">Proyectos</a>
        <a href="#sobre-nosotros" class="nav-link">Sobre nosotros</a>
        <a href="#precios" class="nav-link">Precios</a>
        <a href="#contactanos" class="nav-link">Contáctanos</a>
      </div>
    </nav>

    <div id="mobile-menu" class="mobile-nav hidden">
      <div class="mobile-nav-links">
        <a href="#inicio" class="mobile-nav-link">Inicio</a>
        <a href="#servicios" class="mobile-nav-link">Servicios</a>
        <a href="#proceso" class="mobile-nav-link">Proceso</a>
        <a href="#proyectos" class="mobile-nav-link">Proyectos</a>
        <a href="#sobre-nosotros" class="mobile-nav-link">Sobre nosotros</a>
        <a href="#precios" class="mobile-nav-link">Precios</a>
        <a href="#contactanos" class="mobile-nav-link">Contáctanos</a>
      </div>
    </div>
  </div>
</header>

<style>
  a {
    color: inherit;
    text-decoration: none;
    position: relative;
  }
  a::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  a:hover::before {
    width: 100%;
  }

  .navbar {
    background-color: var(--emerald-600);
    color: var(--white);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-icon {
    height: 2rem;
    width: 2rem;
  }

  .nav-title {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--white);
    cursor: pointer;
    padding: 0.5rem;
  }

  .menu-icon {
    height: 1.5rem;
    width: 1.5rem;
  }

  .desktop-nav {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--white);
    font-weight: 500;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
  }

  .mobile-nav {
    background-color: var(--emerald-700);
    margin-top: 1rem;
    border-radius: 0.5rem;
    padding: 1rem;
    position: absolute;
    left: 1rem;
    right: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .mobile-nav-link {
    color: var(--white);
    font-weight: 500;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
  }

  .mobile-nav-link:hover {
    color: var(--emerald-200);
  }

  @media (max-width: 950px) {
    .mobile-menu-btn {
      display: flex;
      align-items: center;
    }

    .desktop-nav {
      display: none;
    }
  }

  #logo{
    width: 210px;
    height: 45px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });

      const mobileLinks = mobileMenu.querySelectorAll("a");
      mobileLinks.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
        });
      });
    }
  });
</script>

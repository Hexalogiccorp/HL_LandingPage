<style>
  .projects-section {
    padding: 4rem 1rem;
    background-color: var(--white);
  }

  .container {
    max-width: 72rem;
    margin: 0 auto;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: 700;
    text-align: center;
    color: var(--emerald-700);
    margin-bottom: 1rem;
  }

  .section-description {
    color: var(--gray-600);
    text-align: center;
    max-width: 48rem;
    margin: 0 auto 3rem auto;
    line-height: 1.6;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 72rem;
    margin: 0 auto;
  }

  .project-card {
    background-color: var(--white);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .project-card:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .project-image {
    height: 12rem;
    background: linear-gradient(135deg, var(--emerald-100), var(--emerald-200));
    position: relative;
    overflow: hidden;
  }

  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-img {
    transform: scale(1.05);
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(4, 120, 87, 0.7), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .overlay-content {
    padding: 1rem;
  }

  .details-button {
    background-color: rgba(255, 255, 255, 0.9);
    color: var(--gray-900);
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .details-button:hover {
    background-color: var(--white);
  }

  .project-header {
    padding: 1rem 1rem 0.5rem 1rem;
  }

  .project-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.25rem;
  }

  .project-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--white);
  }

  .project-badge-1 {
    background-color: var(--emerald-500);
  }

  .project-badge-2 {
    background-color: var(--emerald-600);
  }

  .project-badge-3 {
    background-color: var(--emerald-400);
  }

  .project-year {
    font-size: 0.75rem;
    color: var(--gray-500);
  }

  .project-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--emerald-700);
    margin: 0;
  }

  .project-content {
    padding: 0 1rem 1rem 1rem;
  }

  .project-description {
    color: var(--gray-600);
    line-height: 1.6;
    margin: 0;
  }

  .view-all-button {
    background-color: transparent;
    color: var(--emerald-600);
    border: 1px solid var(--emerald-600);
    padding: 0.75rem 2rem;
    border-radius: 0.375rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 767px) {
    .projects-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .section-description {
      font-size: 0.9rem;
      margin-bottom: 2rem;
    }

    .project-image {
      height: 10rem;
    }

    .project-title {
      font-size: 1rem;
    }

    .project-description {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .projects-section {
      padding: 2rem 1rem;
    }

    .project-header {
      padding: 0.75rem 0.75rem 0.25rem 0.75rem;
    }

    .project-content {
      padding: 0 0.75rem 0.75rem 0.75rem;
    }

    .project-image {
      height: 8rem;
    }

    .project-title {
      font-size: 0.9rem;
    }

    .project-description {
      font-size: 0.85rem;
    }
  }
</style>

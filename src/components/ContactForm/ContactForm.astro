<section id="contactForm">
  <div class="formContainer">
    <h1>Contact Us</h1>
    <form>
      <div class="formSection">
        <label class="sectionLabel">Name</label>
        <div class="nameFields">
          <div class="formGroup">
            <input type="text" id="firstName" name="firstName" placeholder="First name" />
          </div>
          <div class="formGroup">
            <input type="text" id="lastName" name="lastName" placeholder="Last name" />
          </div>
        </div>
      </div>

      <div class="formSection">
        <label class="sectionLabel">Email</label>
        <div class="formGroup">
          <input type="email" id="email" name="email" placeholder="Email" />
        </div>
      </div>

      <div class="formSection">
        <label class="sectionLabel">Phone number</label>
        <div class="formGroup">
          <input type="tel" id="phone" name="phone" placeholder="Phone number" />
        </div>
      </div>

      <div class="formSection">
        <label class="sectionLabel">Name of Company</label>
        <div class="formGroup">
          <input type="text" id="company" name="company" placeholder="Name of company" />
        </div>
      </div>

      <div class="formSection">
        <label class="sectionLabel">Company Size</label>
        <div class="formGroup">
          <input type="text" id="companySize" name="companySize" placeholder="Company size" />
        </div>
      </div>

      <div class="formSection">
        <label class="sectionLabel">I'd like information on: *</label>
        <div class="formGroup">
          <select id="infoType" name="infoType">
            <option value="" disabled selected>I'd like information on</option>
            <option value="services">Services</option>
            <option value="careers">Careers</option>
            <option value="partnership">Partnership</option>
          </select>
        </div>
      </div>

      <div class="formSection">
        <label class="sectionLabel">Message</label>
        <div class="formGroup">
          <textarea id="message" name="message" rows="4" placeholder="Message"></textarea>
        </div>
      </div>

      <div class="formSection">
        <button type="submit" class="submitBtn">SUBMIT</button>
      </div>
    </form>
  </div>

  <div class="infoContainer">
    <div class="bannerSpace">
      <div class="placeholderBanner">
        <p>Banner Space</p>
      </div>
    </div>
    
    <h1>We're Here <span>For You</span></h1>
    <div class="location">
      <h4>Costa Rica</h4>
      <p>Tel: +506 88888888</p>
    </div>
  </div>
</section>

